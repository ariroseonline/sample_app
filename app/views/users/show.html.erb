<table class="profile" summary="Profile information">
	<tr>
		<td class="main">
			<h1>
				<%= gravatar_for @user, :size => 100 %>
				<%= @user.name %> 
			</h1>
		</td>
		<td class="sidebar round">
			<strong>Name </strong><%= @user.name %><br />
			<strong>URL </strong><%= link_to user_path(@user), "/users/#{@user.id}" %>
		</td>
	</tr>
</table>
